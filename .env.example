# ============================================
# NIRNOY CARE - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# ============ GEMINI AI (Required for Voice Agent) ============
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ============ BACKEND API (For production) ============
VITE_API_URL=http://localhost:3001

# ============ SMS GATEWAY (For production) ============
# Options: greenwebbd, twilio, infobip
SMS_PROVIDER=greenwebbd
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# ============ EMAIL SERVICE (For production) ============
# Options: sendgrid, ses, mailgun
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key

# ============ DATABASE (For backend) ============
DATABASE_URL=postgresql://user:password@localhost:5432/nirnoy_db

# ============ JWT (For backend) ============
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
