# ==============================================
# NIRNOY HEALTH APP - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ==============================================
# GEMINI AI (Required for AI features)
# ==============================================
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# SUPABASE (Required for database & auth)
# ==============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# APP CONFIGURATION
# ==============================================
VITE_APP_NAME=Nirnoy
VITE_APP_URL=https://www.nirnoy.ai
VITE_APP_ENV=production

# ==============================================
# FEATURE FLAGS
# ==============================================
VITE_ENABLE_VOICE_AGENT=true
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_ANALYTICS=true

# ==============================================
# ANALYTICS (Optional)
# ==============================================
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# ==============================================
# SMS GATEWAY (For production notifications)
# ==============================================
# VITE_SMS_API_KEY=your_sms_api_key
# VITE_SMS_SENDER_ID=NIRNOY

# ==============================================
# PAYMENT GATEWAY (For online payments)
# ==============================================
# VITE_BKASH_APP_KEY=your_bkash_app_key
# VITE_BKASH_APP_SECRET=your_bkash_app_secret

